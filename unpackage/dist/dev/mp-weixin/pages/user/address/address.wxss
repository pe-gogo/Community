view {
  display: flex;
}
.add {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  justify-content: center;
  align-items: center;
}
.add .btn {
  box-shadow: 0rpx 5rpx 10rpx rgba(0, 0, 0, 0.4);
  width: 70%;
  height: 80rpx;
  border-radius: 80rpx;
  background-color: #f06c7a;
  color: #fff;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.add .btn .icon {
  height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}
.list {
  flex-wrap: wrap;
}
.list .row {
  width: 96%;
  padding: 20rpx 2%;
}
.list .row .left {
  width: 90rpx;
  flex-shrink: 0;
  align-items: center;
}
.list .row .left .head {
  width: 70rpx;
  height: 70rpx;
  background: linear-gradient(to right, #ccc, #aaa);
  color: #fff;
  justify-content: center;
  align-items: center;
  border-radius: 60rpx;
  font-size: 35rpx;
}
.list .row .center {
  width: 100%;
  flex-wrap: wrap;
}
.list .row .center .name-tel {
  width: 100%;
  align-items: baseline;
}
.list .row .center .name-tel .name {
  font-size: 34rpx;
}
.list .row .center .name-tel .tel {
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #777;
}
.list .row .center .name-tel .default {
  font-size: 22rpx;
  background-color: #f06c7a;
  color: #fff;
  padding: 0 18rpx;
  border-radius: 24rpx;
  margin-left: 20rpx;
}
.list .row .center .address {
  width: 100%;
  font-size: 24rpx;
  align-items: baseline;
  color: #777;
}
.list .row .right {
  flex-shrink: 0;
  align-items: center;
  margin-left: 20rpx;
}
.list .row .right .icon {
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 60rpx;
  border-left: solid 1rpx #aaa;
  font-size: 40rpx;
  color: #777;
}

