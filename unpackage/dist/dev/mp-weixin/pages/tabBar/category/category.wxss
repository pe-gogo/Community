.status {
  width: 100%;
  height: 0;
  position: fixed;
  z-index: 10;
  background-color: #fff;
  top: 0;
}
.header {
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: #fff;
}
.header .addr {
  width: 120rpx;
  height: 60rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.header .addr .icon {
  height: 60rpx;
  margin-right: 5rpx;
  display: flex;
  align-items: center;
  font-size: 42rpx;
  color: #ffc50a;
}
.header .input-box {
  width: 100%;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.header .input-box .icon {
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  font-size: 34rpx;
  color: #c0c0c0;
}
.header .input-box input {
  padding-left: 28rpx;
  height: 28rpx;
  font-size: 28rpx;
}
.header .icon-btn {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  display: flex;
}
.header .icon-btn .icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 42rpx;
}
.place {
  background-color: #ffffff;
  height: 100rpx;
}
.category-list {
  width: 100%;
  background-color: #fff;
  display: flex;
}
.category-list .left, .category-list .right {
  position: absolute;
  top: 100rpx;
  bottom: 0rpx;
}
.category-list .left {
  width: 24%;
  left: 0rpx;
  background-color: #f2f2f2;
}
.category-list .left .row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.category-list .left .row .text {
  width: 100%;
  position: relative;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  color: #3c3c3c;
}
.category-list .left .row .text .block {
  position: absolute;
  width: 0rpx;
  left: 0;
}
.category-list .left .row.on {
  height: 100rpx;
  background-color: #fff;
}
.category-list .left .row.on .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.category-list .left .row.on .text .block {
  width: 10rpx;
  height: 80%;
  top: 10%;
  background-color: #f06c7a;
}
.category-list .right {
  width: 76%;
  left: 24%;
}
.category-list .right .category {
  width: 94%;
  padding: 20rpx 3%;
}
.category-list .right .category .banner {
  width: 100%;
  height: 24.262vw;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.3);
}
.category-list .right .category .banner image {
  width: 100%;
  height: 24.262vw;
}
.category-list .right .category .list {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.category-list .right .category .list .box {
  width: calc(71.44vw / 3);
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.category-list .right .category .list .box image {
  width: 60%;
  height: calc(71.44vw / 3 * 0.6);
}
.category-list .right .category .list .box .text {
  margin-top: 5rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 26rpx;
}

